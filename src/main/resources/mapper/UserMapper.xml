<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kelivan.user.dao.UserMapper">
  <select id="isHasAdmin" parameterType="Map" resultType="Map">
    select
    id,name,psw,type,ip
    from user
    where
    name = #{name,jdbcType=VARCHAR}
    and
    psw = #{psw,jdbcType=VARCHAR}
  </select>


  <select id="getUser" parameterType="Long" resultType="Map">
    select 
    id,name,psw,type,ip
    from user
    where id = #{id,jdbcType=BIGINT}
  </select>
  
  <select id="getUserList" resultType="Map" parameterType="Map">
  select
  id,name,psw,type,ip
  from user
  where
  1=1
  <if test="name != null">
    and
    name like #{name,jdbcType=VARCHAR}
  </if>
  <if test="ip != null">
    and
    ip like #{ip,jdbcType=VARCHAR}
  </if>

  </select>

  <delete id="deleteUserBatch" parameterType="Long">
    delete from user
    where id
    in
    <foreach collection="array" item="id" open="(" separator="," close=")">
      #{id,jdbcType=BIGINT}
    </foreach>
  </delete>


  <delete id="deleteUser" parameterType="java.lang.Long">
    delete from user
    where id = #{id,jdbcType=BIGINT}
  </delete>

  <insert id="postUser" parameterType="com.kelivan.user.model.User" keyProperty="id" useGeneratedKeys="true">
    insert into user
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="id != null">
        id,
      </if>
      <if test="name != null">
        name,
      </if>
      <if test="psw != null">
        psw,
      </if>
      <if test="type != null">
        type,
      </if>
      <if test="ip != null">
        ip,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="id != null">
        #{id,jdbcType=BIGINT},
      </if>
      <if test="name != null">
        #{name,jdbcType=VARCHAR},
      </if>
      <if test="psw != null">
        #{psw,jdbcType=VARCHAR},
      </if>
      <if test="type != null">
        #{type,jdbcType=INTEGER},
      </if>
      <if test="ip != null">
        #{ip,jdbcType=VARCHAR},
      </if>
    </trim>
  </insert>


  <update id="putUser" parameterType="com.kelivan.user.model.User">
    update user
    <set>
      <if test="name != null">
        name = #{name,jdbcType=VARCHAR},
      </if>
      <if test="psw != null">
        psw = #{psw,jdbcType=VARCHAR},
      </if>
      <if test="type != null">
        type = #{type,jdbcType=INTEGER},
      </if>
      <if test="ip != null">
        psw = #{ip,jdbcType=VARCHAR},
      </if>
    </set>
    where id = #{id,jdbcType=BIGINT}
  </update>

</mapper>